{
    "compilerOptions": {
        "outDir": "./build",
        "target": "ES5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext",
            "es2023",
        ],
        "allowJs": true,
        "checkJs": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "experimentalDecorators": true,
        "removeComments": true,
    },
    "exclude": [
        "node_modules",
        "./build"
    ],
    // "include": []
}